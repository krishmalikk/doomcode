{
  "name": "doomcode",
  "version": "0.1.0",
  "private": false,
  "description": "Desktop CLI wrapper for DoomCode",
  "type": "module",
  "bin": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@doomcode/crypto": "workspace:*",
    "@doomcode/protocol": "workspace:*",
    "@doomcode/diff-parser": "workspace:*",
    "commander": "^13.1.0",
    "node-pty": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.13"
  }
}
