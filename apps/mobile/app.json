{
  "expo": {
    "name": "DoomCode",
    "slug": "doomcode",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "doomcode",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.krrishess.doomcode",
      "infoPlist": {
        "NSCameraUsageDescription": "DoomCode needs camera access to scan QR codes for pairing with your desktop."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.doomcode.app",
      "permissions": ["android.permission.CAMERA"]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow DoomCode to access your camera for QR code scanning."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
